<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ClassViewEnrollActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:background="@color/green_background"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="View Class"
            android:textSize="18dp"
            android:textStyle="bold" />

    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:background="@color/green_background"
        android:padding="10dp">

        <TextView
            android:id="@+id/CourseName_Label_Class_ViewEnroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TeacherName: NameOfTeacher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingTop="50dp"
            app:layout_constraintTop_toTopOf="parent"></TextView>
        <TextView
            android:id="@+id/ClassName_Label_Class_ViewEnroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TeacherName: NameOfTeacher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/CourseName_Label_Class_ViewEnroll"></TextView>

        <TextView
            android:id="@+id/Teacher_Label_Class_ViewEnroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TeacherName: NameOfTeacher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/ClassName_Label_Class_ViewEnroll"></TextView>

        <Button
            android:id="@+id/enroll_classEnrolActivity"
            android:layout_marginTop="100dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enroll"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ClassName_Label_Class_ViewEnroll"></Button>
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>